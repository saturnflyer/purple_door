<%= simple_form_for @event, class: "form" do |f| %>
  <%= f.input :name, label: "Event Name", class: "large-6.columns" %>
  <%= f.input :datetime, as: :date_picker, :label => 'Date',
                input_html: {data: {date_options: {defaultDate: '2012/12/25'}}} %>
  <%= f.button :submit %>
<% end %>
