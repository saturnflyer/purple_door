
<div class="row">
    <div class="large-6 columns">
      <div class="signup-panel">
        <p class="welcome"> Sign up!</p>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

            <div class="row collapse">
              <div class="small-2 columns">
                <span class="prefix"><i class="fi-mail"></i></span>
              </div>
              <div class="small-10  columns">
                <%= f.email_field :email, autofocus: true, placeholder: "email" %>
              </div>
            </div>
        
            <div class="row collapse">
              <div class="small-2 columns ">
                <span class="prefix"><i class="fi-lock"></i></span>
              </div>
              <div class="small-10 columns ">
                <% 
                  placeholder = "password"
                  if @minimum_password_length
                    placeholder += " (#{@minimum_password_length} characters minimum)"
                  end 
                %>
                <%= f.password_field :password, autocomplete: "off", placeholder: placeholder %>
              </div>
            </div>

            <div class="row collapse">
              <div class="small-2 columns ">
                <span class="prefix"><i class="fi-lock"></i></span>
              </div>
              <div class="small-10 columns ">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "password confirmation" %>
              </div>
            </div>

             
            <div class="actions">
                <%= f.submit "Sign up!", :class => "button" %>
            </div>

          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
   </div>