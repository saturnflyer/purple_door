<div class="row">
  <div class="small-12 columns">
    <h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
    <% u = AuthorizedUser.new(current_user) %>
    <% if u.can?("edit_user") %>
      <div>
          <%= link_to "Edit User Info", edit_user_path(@user.id) %>
      </div>
    <% end %>
    <% if u.can?("manage_permissions") %>
      <div>
        <%= link_to "Manage User Permissions", edit_admin_user_permissions_path(@user.id) %>
      </div>
    <% end %>
    <br>
    <div>
      <div><p><strong>Birthdate:</strong> <%= "#{@user.birthdate}" %></p></div>
      <div><p><strong>Email:</strong> <%= "#{@user.email}" %></p></div>
      <div>
      <h3>User's Curriculum</h3>
      <table>
        <thead>
          <th>Curriculum list goes here</th>
        </thead>
        <tr>
          <td></td>
        </tr>
      </table>
      <br>
      <h3>User's Events / History</h3>
      </div>
    </div>
  </div>
</div>
